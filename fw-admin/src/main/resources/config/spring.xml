<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
      http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context.xsd">
    <description>spring integration</description>
    
    <context:component-scan base-package="com.cus.wob.service" ></context:component-scan>
	<!-- 配置属性文件 -->
	<context:property-placeholder location="classpath:/config/jdbc.properties" />

	<bean id="engine" class="com.cus.wob.freemarker.Engine" scope="singleton">
		<constructor-arg name="ftlDir" value="/template/" />
	</bean>


	<bean id="redisEnv" class="com.cus.wob.cache.RedisEnv" scope="singleton" init-method="init">
		<property name="configPath" value="/config/redisEnv.xml"></property>
		<property name="isUse_slave" value="false"></property>
	</bean>
	<!-- 集成其它的配置文件 -->
	<import resource="classpath:/config/spring-jdbc.xml"/>

	<bean id="SpringContextUtil " class="com.cus.wob.frame.ioc.SpringContextUtil" scope="singleton"/>
	<!--初始化监听器-->
	<bean class="com.cus.wob.listener.WebInitListener"/>
</beans>
